{
    "name": "tilda-swanton",
    "version": "1.0.0",
    "description": "Backend API desenvolvida para testes e aprendizado",
    "main": "src/app.ts",
    "author": "Leonardo Sima",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "node -r tsconfig-paths/register -r dotenv-extended/config ./dist/app.js dotenv_config_path=./config/.env.prod dotenv_config_defaults=./config/.env.defaults",
        "dev": "nodemon",
        "test:unit": "dotenv-extended --path=./config/.env.test --defaults=./config/.env.defaults jest",
        "test:vunit": "dotenv-extended --path=./config/.env.test --defaults=./config/.env.defaults jest --verbose",
        "test:cunit": "dotenv-extended --path=./config/.env.test --defaults=./config/.env.defaults jest --coverage"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/supertest": "^6.0.2",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2"
    },
    "dependencies": {
        "@types/dotenv-parse-variables": "^2.0.3",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.5",
        "@types/validator": "^13.11.8",
        "@types/yamljs": "^0.2.34",
        "connect": "^3.7.0",
        "dotenv-extended": "^2.9.0",
        "dotenv-parse-variables": "^2.0.0",
        "express": "^4.18.2",
        "express-openapi-validator": "^5.1.2",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.9",
        "swagger-routes-express": "^3.3.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "validator": "^13.11.0",
        "winston": "^3.11.0",
        "yamljs": "^0.3.0"
    }
}
